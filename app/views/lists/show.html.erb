<h1><%= @list.name %></h1>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <%= image_tag bookmark.movie.poster_url, alt: bookmark.movie.title, width: 100 %>
      <%= link_to bookmark.movie.title, movie_path(bookmark.movie) %> - <%= bookmark.comment %>
      <%= link_to 'Remove', bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    </li>
  <% end %>
</ul>
<%= link_to 'Add a movie', new_list_bookmark_path(@list), class: 'btn btn-primary' %>
